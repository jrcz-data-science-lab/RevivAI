---
import AppLayout from '@/layouts/app-layout.astro';
import { Setup as SetupApp } from '@/components/setup/setup.tsx';
import NavbarMini from '@/components/navbar-mini.astro';

// Do not render on the server
export const prerender = false;

// Make back button redirect to the project if `redirectToProject` query parameter is set
const redirectToProjectParam = Astro.url.searchParams.get('redirectToProject');
const backLink = redirectToProjectParam ? `/app/${redirectToProjectParam}` : '/';
---

<AppLayout>
	<NavbarMini backLink={backLink} />
	<SetupApp client:only />
</AppLayout>
